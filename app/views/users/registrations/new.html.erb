<div class="container-form">
  <div class="left">
    <div class="header">
      <h2 class="animation a1">Rejoins-nous !</h2>
      <h4 class="animation a2">Renseigne tes informations ici</h4>
    </div>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form">
          <div class="animation a3">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      :input_html => { :class => 'form-field' } %>
          </div>
          <div class="animation a4">
            <%= f.input :password,
                        label: 'Mot de passe',
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" },
                        :input_html => { :class => 'form-field' } %>
          </div>
          <div class="animation a5">
            <%= f.input :password_confirmation,
                        label: 'Confirmer le mot de passe',
                        required: true,
                        input_html: { autocomplete: "new-password" },
                        :input_html => { :class => 'form-field' }  %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "S'inscrire", :class => 'animation a6 btn btn-outline-secondary' %>
        </div>
    
      <% end %>
    <div class="animation a7">
      <%= render "users/shared/links" %>
    </div>
  </div>
  <div class="right">
    <%= image_tag 'logo3.png', class:"brand-sign" %>
  </div>
</div>



    

      
  
