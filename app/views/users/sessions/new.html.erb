<div class="container-form">
  <div class="left">
    <div class="header">
      <h2 class="animation a1">Bienvenue</h2>
      <h4 class="animation a2">Connecte-toi avec ton email et ton mot de passe</h4>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form">
        <div class="animation a3">
          <%= f.input :email,
                      autofocus: true,
                      label: 'Email',
                      required: false,
                      input_html: { autocomplete: "email" },
                      :input_html => { :class => 'form-field' } %>
        </div>
        <div class="animation a4">
          <%= f.input :password,
                      label: 'Mot de passe',
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      :input_html => { :class => 'form-field' } %>
        </div>
        <div class="animation a5">
          <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter", :class => 'animation a6 btn btn-outline-secondary' %>
      </div>
    <% end %>

    <div class="animation a7">
      <%= render "users/shared/links" %>
    </div>
  </div>
  <div class="right">
    <%= image_tag 'logo3.png', class:"brand-sign" %>
  </div>
</div>




