    <div class="container d-flex justify-content-center pt-2" >
      <ul class="search_bar mt-5" >
          <%= form_tag(libsearch_page_path, :method => "get",   
          class: 'navbar-form navbar-left') do %>  
            <div class="input-group my-2">  
              <%= search_field_tag :search, params[:search], placeholder: "Tape le nom du manga que tu cherches", class: "form-control" %>  
              <div class="input-group-btn mx-3">  
                <%= button_tag "Trouver un Manga", :class => 'btn btn-danger glyphicon glyphicon-search',:name => nil%>  
              </div>  
            </div>  
          <% end %>
      </ul>
    </div>